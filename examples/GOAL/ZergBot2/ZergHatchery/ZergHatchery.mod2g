use ZergHatchery as knowledge.
use Zerghatchery as actionspec.

module ZergHatchery {
	if goal(trainDrone), bel(unit("Zerg Drone",X) ,X<20) then train("Zerg Drone") + drop(trainDrone).
		
	if goal(trainOverlord), bel(not(isMorphing("Zerg Overlord", _))) then train("Zerg Overlord") + drop(trainOverlord).
		
	if goal(trainZergling) then train("Zerg Zergling").
		
	if goal(trainHydralisk) then train("Zerg Hydralisk").
}