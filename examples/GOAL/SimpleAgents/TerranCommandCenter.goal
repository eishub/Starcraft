main module{
	beliefs{
		trainSCV.
	}
	program{
		if bel(percept(unit("Terran SCV",X)),X<25) then train("Terran SCV").	
	}
	actionspec {	
		train(Id) {
			pre {trainSCV}
			post {not(trainSCV)}
		}
	}
}

event module {
	program {
		if bel(not(trainSCV), percept(queueSize(N)), N < 2, percept(minerals(X)),X>=50,percept(supply(Y,Z)),Y<Z) then insert(trainSCV).
	}	
}
