use TerranSiegeTankTankMode as actionspec.
use TerranSiegeTankTankMode as knowledge.

module TerranSiegeTankTankModeEvent {
	if percept(enemy(_, Id,_,_, 'false' ,_, _, _, _), position(MX,MY)), bel(enemyBase(X, Y), distance(MX, MY, X, Y, D), D < 10) then attack(Id).
	
	forall percept(id(MyId), friendly(Name,Type,Id,Health,Shields,WX,WY,X,Y)), bel(MyId \= Id, not(friendly(Name,Type,Id,X,Y))) do insert(friendly(Name,Type,Id,X,Y)).
	forall percept(not(friendly(Name,Type,Id,_,_,_,_,X,Y))), bel(friendly(Name,Type,Id,X,Y)) do delete(friendly(Name,Type,Id,X,Y)).
	
	if percept(position(X1,Y1)), bel(position(X2,Y2), (X1 \= X2 ; Y1 \= Y2)) then insert(position(X1,Y1)) + delete(position(X2,Y2)).
	
	forall percept(enemy(A,B,C,B,D,E,F,G,H)), bel(not(enemy(A,B,C,B,D,E,F,G,H))) do insert(enemy(A,B,C,B,D,E,F,G,H)).
	forall percept(not(enemy(A,B,C,B,D,E,F,G,H))), bel(enemy(A,B,C,B,D,E,F,G,H)) do delete(enemy(A,B,C,B,D,E,F,G,H)).
}