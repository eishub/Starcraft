use TerranMarine as actionspec.
use TerranMarine as knowledge.

module TerranMarineEvent {
	if percept(enemy(_, Id,_,_, _, _, _, _, _), position(MX,MY)) then {
			if bel(enemyBase(X, Y), distance(MX, MY, X, Y, D), D < 10) then attack(Id).	
			if percept(friendly(_,"Terran Command Center", _, _, _, _, _, X, Y)), bel(distance(MX, MY, X, Y, D), D < 10) then attack(Id).
		}
		
	forall percept(id(MyId), friendly(Name,Type,Id,Health,Shields,WX,WY,X,Y)), bel(MyId \= Id, not(friendly(Name,Type,Id,X,Y))) do insert(friendly(Name,Type,Id,X,Y)).
	forall percept(not(friendly(Name,Type,Id,_,_,_,_,X,Y))), bel(friendly(Name,Type,Id,X,Y)) do delete(friendly(Name,Type,Id,X,Y)).	 

		%if bel(not(percept(stimmed))) then use('Stim Packs').
}