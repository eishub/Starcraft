main module{
	
	program{
		%if bel(percept(unit("Terran Marine", A)),A>3, percept(base(X, Y, 'true', _))) 
		%percept(friendly(_, "Terran Command Center", X1, Y1, BX, BY)), BX =\= X, BY =\= Y, X1 =\= X, Y =\= Y1) 
		%then move(X, Y).
		
		%if bel(percept(base(X, Y, Start, _)), percept(friendly(_, "Terran Command Center", _, _, BX, BY)), BX =\= X, BY =\= Y) then attack(X, Y).
	}
	
	actionspec{
		attack(X,Y){
			pre{true}
			post{true}
		}
		
		move(X,Y) {
			pre{not(percept(moving))}
			post{true}
		}
		
		attack(Id){
			pre{true}
			post{true}
		}
		use(Id){
			pre{true}
			post{true}
		}
	}
}

event module {
	program {
		%if bel(percept(enemy(_, Id,_,_, _, _, _, _))) then attack(Id).
		%if bel(not(percept(stimmed))) then use('Stim Packs').
	}	
}
