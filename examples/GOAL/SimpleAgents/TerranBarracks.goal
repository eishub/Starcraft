main module{
	beliefs{
		trainMarine.
		trainMedic.
	}
	program{
		if bel(trainMarine) then train("Terran Marine").
		if bel(trainMedic) then train("Terran Medic").	
	}
	actionspec {	
		train(Id) {
			pre {true}
			post {true}
		}
	}
}

event module {
	program {
		if bel(percept(queueSize(N)), N < 3, percept(supply(Y,Z)), percept(minerals(X)), X>=50 , (Z - Y) >= 2 ) then{
			 if bel(not(trainMarine)) then insert(trainMarine).
			 if bel(not(trainMedic), percept(gas(G)), G >= 25) then insert(trainMedic).
		}
	}	
}
