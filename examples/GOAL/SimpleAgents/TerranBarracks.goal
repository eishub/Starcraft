main module{
	beliefs{
		trainMarine.
	}
	program{
		if bel(trainMarine) then train("Terran Marine").	
	}
	actionspec {	
		train(Id) {
			pre {trainMarine}
			post {not(trainMarine)}
		}
	}
}

event module {
	program {
		if bel(not(trainMarine), percept(queueSize(N)), N < 2, percept(minerals(X)),X>=50,percept(supply(Y,Z)),Y<Z) then insert(trainMarine).
	}	
}
