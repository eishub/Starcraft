use TerranSCV as actionspec.
use TerranSCV as knowledge.

order = linearall.

module main{	
	if a-goal(build("Terran Bunker", RX, RY)) then build("Terran Bunker", RX, RY) + drop(build("Terran Bunker", RX, RY)).
		
	if a-goal(build("Terran Supply Depot", X, Y)) then build("Terran Supply Depot", X, Y) + drop(build("Terran Supply Depot", X, Y)).
		
	if a-goal(build("Terran Refinery", X, Y)) then  build("Terran Refinery", X, Y) + drop(build("Terran Refinery", X, Y)).
	
	if a-goal(build("Terran Command Center", X, Y)) then build("Terran Command Center", X, Y).
		
	if a-goal(build("Terran Engineering Bay", X, Y)) then build("Terran Engineering Bay", X, Y) + drop(build("Terran Engineering Bay", X, Y)).
		
	if a-goal(build("Terran Barracks", X, Y)) then build("Terran Barracks", X, Y) + drop(build("Terran Barracks", X, Y)).
		
	if a-goal(build("Terran Academy", X, Y)) then build("Terran Academy", X, Y)+ drop(build("Terran Academy", X, Y)).
		
	if a-goal(build("Terran Factory", X, Y)) then build("Terran Factory", X, Y) + drop(build("Terran Factory", X, Y)).
		
	if a-goal(build("Terran Starport", X, Y)) then build("Terran Starport", X, Y) + drop(build("Terran Starport", X, Y)).
		
	if a-goal(build("Terran Science Facility", X, Y)) then build("Terran Science Facility", X, Y) + drop(build("Terran Science Facility", X, Y)).
		
	if bel(friendly(_,"Terran Refinery", Id, _, _), not(busy), shouldMineVespene) then gather(Id).
		
	if a-goal(gather(Id)), bel(not(busy)) then gather(Id).
		
}