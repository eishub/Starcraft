use TerranSCV as actionspec.
use TerranSCV as knowledge.

module TerranSCVInit {
	if percept(id(Id)) then insert(id(Id)).
		if percept(supply(C,M)) then insert(supply(C,M)).
		if percept(minerals(M)) then insert(minerals(M)).
		if percept(gas(G)) then insert(gas(G)).
		forall percept(base(X, Y, Begin, RegionID)) do insert(base(X, Y, Begin, RegionID)).
		forall percept(constructionSite(X,Y)), bel(not(constructionSite(X,Y))) do insert(constructionSite(X,Y)).
		if percept(position(X,Y)) then insert(position(X,Y)).
		forall percept(chokepoint(X,Y)) do insert(chokepoint(X,Y)).
		if  percept(id(Id)), bel(me(Name)) then ("terranCommandCenter").send(scv(Name, Id)).
}