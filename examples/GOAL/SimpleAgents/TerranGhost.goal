main module{
	knowledge{
		enemyBase(X, Y) :- percept(base(X, Y, 'true', _)), 
		percept(friendly(_, "Terran Command Center", _, _, _, _, _, X1, Y1)), distance(X, Y, X1, Y1, Res), Res > 10.
		
		distance(X1,Y1,X2,Y2,Res):- Res is sqrt((X2-X1)**2 + (Y2-Y1)**2).
	}
	
	program{
		if bel(percept(unit("Terran Siege Tank Tank Mode", B)),percept(unit("Terran Marine", A)), A > 30,B > 3 , 
		enemyBase(X,Y)) then attack(X, Y).
	}
	
	actionspec{
		attack(X,Y){
			pre{true}
			post{true}
		}
		
		move(X,Y) {
			pre{not(percept(moving))}
			post{true}
		}
		
		attack(Id){
			pre{true}
			post{true}
		}
		use(Id){
			pre{true}
			post{true}
		}
	}
}

event module {
	program {
		if bel(percept(enemy(_, Id,_,_, _, _, _, _, _)), percept(position(MX,MY)), enemyBase(X, Y), distance(MX, MY, X, Y, D), D < 10) then attack(Id).
		if bel(percept(hasResearched('Personnal Cloaking')), not(percept(isCloaked(_, Id))), percept(id(Id)),
		percept(energy(E)), E >= 30) then use('Personnal Cloaking').
	}	
}
