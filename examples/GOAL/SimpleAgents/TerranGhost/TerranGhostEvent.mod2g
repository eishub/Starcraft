use TerranGhost as actionspec.
use TerranGhost as knowledge.

module TerranGhostEvent {
	if bel(percept(enemy(_, Id,_,_, _, _, _, _, _)), percept(position(MX,MY)), enemyBase(X, Y), distance(MX, MY, X, Y, D), D < 10) then attack(Id).
	if bel(percept(hasResearched('Personnal Cloaking')), not(percept(isCloaked(_, Id))), percept(id(Id)),
	percept(energy(E)), E >= 30) then use('Personnal Cloaking').
}