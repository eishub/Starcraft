main module{
	
	program{
		if bel(not(upgrade('Terran Infantry Weapons'))) then upgrade('Terran Infantry Weapons').
		if bel(not(upgrade('Terran Infantry Armor'))) then upgrade('Terran Infantry Armor').
	}
	
	actionspec {	
		upgrade(Type) {
			pre {not(upgrading)}
			post {true}
		}
	}	
}

event module {
	program {
		if bel(percept(upgrade(X))) then insert(upgrade(X)) + insert(upgrading).
		if bel(upgrading, not(percept(upgrade(_)))) then delete(upgrading).
	}	
}
