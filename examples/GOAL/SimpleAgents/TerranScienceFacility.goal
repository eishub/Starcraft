main module{
	
	actionspec {
		buildAddon(X) {
			pre {true}
			post {true}
		}
		
		skip {
			pre {true}
			post {true}	
		}
	}
	
	program{
		if bel(percept(isBeingConstructed)) then skip.
		if bel(not(percept(addon("Terran Covert Ops"))),percept(queueSize(N)), N = 0, percept(minerals(X)), X>=50, percept(gas(Y)), Y>=50) 
			then buildAddon("Terran Covert Ops").
	}
}