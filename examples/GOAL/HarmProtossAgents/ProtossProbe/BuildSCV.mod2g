use ProtossSCV as actionspec.
use ProtossSCV as knowledge.

order = linearall.

module main{	
	if a-goal(build('Protoss Pylon',X,Y)) then build('Protoss Pylon',X,Y)+drop(build('Protoss Pylon',X,Y)).	
	if a-goal(build(Name,X,Y)) then build(Name,X,Y)+drop(build(Name,X,Y)).	
	
	if bel(not(busy),mineralField(Id,Amount,X,Y), ownbase(CX,CY), distance(X,Y,CX,CY,L), L<10) then gather(Id).
}