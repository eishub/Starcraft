use TerranSCV as knowledge.

module TerranSCVInit {
	if percept(self(Id,_)) then ('terranCommandCenter').send(scv(Id)) + insert(id(Id)).
		if percept(resources(Min,Gas,C,M)) then insert(supply(C,M))+insert(minerals(Min))+insert(gas(Gas)).
		forall percept(base(X, Y, Begin, RegionID)) do insert(base(X, Y, Begin, RegionID)).
		if percept(unit(_,'Terran Command Center',_,_,_,_,X,Y)) then insert(cmd(X,Y)).
		if bel(base(X,Y,'true',_),cmd(X2,Y2),distance(X,Y,X2,Y2,D), D>10) then insert(enemybase(X,Y)).
		if bel(base(X,Y,'true',_),cmd(X2,Y2),distance(X,Y,X2,Y2,D), D<10) then insert(ownbase(X,Y)).
		forall percept(constructionSite(X,Y)) do insert(constructionSite(X,Y)).
		forall percept(chokepoint(X,Y)) do insert(chokepoint(X,Y)).
}